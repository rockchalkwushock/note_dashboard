{
  "bail": true,
  "testEnvironment": "node",
  "collectCoverageFrom": ["src/**/*.js"],
  "coveragePathIgnorePatterns": [
    "./webpack.config.dev.js",
    "./webpack.config.prod.js",
    "./coverage/",
    "./build/",
    "./scripts/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  }
}
