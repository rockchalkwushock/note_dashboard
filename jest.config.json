{
  "bail": true,
  "testEnvironment": "node",
  "collectCoverageFrom": ["api/**/*.js"],
  "coveragePathIgnorePatterns": [
    "./webpack.config.dev.js",
    "./webpack.config.prod.js",
    "./api/configs",
    "./api/services/errors.js",
    "./scripts/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 60,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  }
}
