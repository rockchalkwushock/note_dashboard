{
  "bail": true,
  "testEnvironment": "node",
  "collectCoverageFrom": ["api/**/*.js"],
  "coveragePathIgnorePatterns": [
    "./webpack.config.dev.js",
    "./webpack.config.prod.js",
    "./coverage/",
    "./build/",
    "./scripts/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  }
}
