{
  "bail": true,
  "testEnvironment": "node",
  "collectCoverageFrom": ["api/**/*.js", "src/**/*.js"],
  "coveragePathIgnorePatterns": [
    "./webpack.config.dev.js",
    "./webpack.config.prod.js",
    "./api/configs",
    "./api/services/errors.js",
    "./src/components",
    "./src/pages",
    "./src/redux",
    "./src/Root.js",
    "./src/Routes.js",
    "./src/index.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 60,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  }
}
